# LLM API Keys (at least one required)
OPENAI_API_KEY=sk-proj-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
# Add other provider keys as needed

# Resend Email Service (for Health Quiz email delivery)
RESEND_API_KEY=re_your-resend-key-here
RESEND_FROM_EMAIL=Rogue Herbalist Health Quiz <noreply@instruction.coach>  # Production (verified domain with friendly name)

# WordPress Site Configuration
WORDPRESS_URL=https://rogueherbalist.com
WORDPRESS_USERNAME=your-wordpress-username
WORDPRESS_APP_PASSWORD=your-app-password-here

# Required: WooCommerce (for product categories)
WOOCOMMERCE_CONSUMER_KEY=ck_your-consumer-key-here
WOOCOMMERCE_CONSUMER_SECRET=cs_your-consumer-secret-here

# API Settings
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/sync.log

# Test Mode (set to true to run in test mode without making changes)
TEST_MODE=false
DRY_RUN=false